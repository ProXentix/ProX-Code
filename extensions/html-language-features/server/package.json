    "ProX-Code-languageserver": "^10.0.0-next.12",
    "ProX-Code-languageserver-textdocument": "^1.0.12",
    "ProX-Code-uri": "^3.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "22.x"
  },
  "scripts": {
