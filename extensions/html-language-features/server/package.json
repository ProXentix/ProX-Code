  "license": "MIT",
  "engines": {
    "node": "*"
  },
  "main": "./out/node/htmlServerMain",
  "dependencies": {
    "@ProX-Code/l10n": "^0.0.18",
    "ProX-Code-css-languageservice": "^6.3.5",
